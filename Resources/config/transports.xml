<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="clarity_notification.transport.email.class">Clarity\NotificationBundle\Transport\MailTransport</parameter>
    </parameters>

    <services>
        <service id="clarity_notification.transport.mail" class="%clarity_notification.transport.email.class%">
            <tag name="clarity_notification.transport" alias="email" />
            <argument type="service" id="mailer" />
        </service>
    </services>
    
</container>
